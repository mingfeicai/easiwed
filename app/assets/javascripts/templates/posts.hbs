
{{#link-to 'posts.new'}}Create New{{/link-to}}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <table class='table'>
                <thead>
                <tr><th>Recent Posts</th></tr>
                </thead>

                <tbody>
                {{#each model}}
                <tr>
                    <td>
                        {{#link-to 'post' this}}{{title}} <small class='muted'>by {{author}}</small>{{/link-to}}
                    </td>
                    <td>
                        <button {{action 'delete' this}}>Delete</button>
                    </td>
                </tr>
                {{/each}}
                </tbody>
            </table>
        </div>

        <div class="col-md-9">
            {{outlet}}
        </div>
    </div>
</div>